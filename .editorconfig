# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 2
tab_width = 2

[*.css]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{ts,tsx}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
quote_type = double

[*.{json,jsonc}]
indent_size = 2
indent_style = space
